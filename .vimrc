set autoindent

" spell check 
set spell 
set spelllang=en_us

" Syntax highlighting
syntax on

" no auto wrap
set wrap

set textwidth=0 wrapmargin=0

" vim tab
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4

set number " number line

set laststatus=2 " 2 status lines

nmap O O<esc>j " Insert Line above
